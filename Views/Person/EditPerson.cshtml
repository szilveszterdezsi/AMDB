@model AMDB.ViewModels.PersonVM

@{
    ViewData["Title"] = "Edit Person";
}
<div class="main-content bg-dark text-light">
    @using (Html.BeginForm("EditPerson", "Person", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div>
            <div class="title-box">
                <h1>@ViewData["Title"]</h1>
            </div>
        </div>
        <div class="description-box">
            @Html.Partial("_PersonEditor", Model)
        </div>
    }
</div>
