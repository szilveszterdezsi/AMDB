@model AMDB.ViewModels.MovieVM

@{
    ViewData["Title"] = "Create Movie";
}
<div class="main-content bg-dark text-light">
    @using (Html.BeginForm("CreateMovie", "Movie", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div>
            <div class="title-box">
                <h1>@ViewData["Title"]</h1>
            </div>
        </div>
        <div class="description-box">
            @Html.Partial("_ProductionEditor", Model)
        </div>
    }
</div>