@model AMDB.ViewModels.ProductionVM

<table class="table table-borderless">
    <tbody>
        @if (Model.PosterFileName != null)
        {
            <tr>
                <td colspan="3">
                    @Html.Hidden("PosterFileName", Model.PosterFileName)
                    <div class="poster-box"><img src="~/images/@Model.PosterFileName" /></div>
                </td>
            </tr>
        }
        <tr>
            <td colspan="2">
                @Html.LabelFor(model => model.Title)
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.LabelFor(model => model.Duration)
                @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @size = "1", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.ReleaseDate)
                @Html.EditorFor(model => model.ReleaseDate, "{0:dd-MMMM-yyyy}", new { htmlAttributes = new { @size = "3", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
            </td>
            @if (Model is AMDB.ViewModels.TVShowVM)
            {
                <td>
                    @Html.LabelFor(model => (model as AMDB.ViewModels.TVShowVM).EndDate)
                    @Html.EditorFor(model => (model as AMDB.ViewModels.TVShowVM).EndDate, "{0:dd-MMMM-yyyy}", new { htmlAttributes = new { @size = "3", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => (model as AMDB.ViewModels.TVShowVM).EndDate, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.LabelFor(model => (model as AMDB.ViewModels.TVShowVM).Seasons)
                    @Html.EditorFor(model => (model as AMDB.ViewModels.TVShowVM).Seasons, new { htmlAttributes = new { @size = "1", @type = "number", @min = "1", @step = "1", @value = "1", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => (model as AMDB.ViewModels.TVShowVM).Seasons, "", new { @class = "text-danger" })
                </td>
            }
        </tr>
        <tr>
            <td colspan="3">
                @Html.LabelFor(model => model.PosterFormFile)
                @Html.EditorFor(model => model.PosterFormFile, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PosterFormFile, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td colspan="3">
                @Html.LabelFor(model => model.TrailerURL)
                @Html.EditorFor(model => model.TrailerURL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TrailerURL, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.SelectedGenres)
                @Html.ListBoxFor(model => model.SelectedGenres, Model.AllGenres, new { @size = "8", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedGenres, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.LabelFor(model => model.Director) & @Html.LabelFor(model => model.SelectedStars)
                @Html.DropDownListFor(model => model.Director, Model.AllPersons, "Select director...", new { @class = "form-control" })
                @Html.ListBoxFor(model => model.SelectedStars, Model.AllPersons, new { @size = "6", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedStars, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Director, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.LabelFor(model => model.SelectedKeywords)
                @Html.ListBoxFor(model => model.SelectedKeywords, Model.AllKeywords, new { id = "keywordList", @size = "5", @class = "form-control" })
                <div class="d-inline-block">
                    @Html.TextBox("New Keyword", null, new { id = "inputKeyword", @class = "form-control" })
                    <button type="button" id="createKeyword" class="btn btn-sm btn-warning text-uppercase">ADD NEW KEYWORD</button>
                </div>
                @Html.ValidationMessageFor(model => model.SelectedKeywords, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td colspan="3">
                @Html.LabelFor(model => model.Description)
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @rows = "4", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td colspan="3">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="submit" value="SUBMIT" class="btn btn-warning text-uppercase" />
            </td>
        </tr>
    </tbody>
</table>
