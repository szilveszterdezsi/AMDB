@model AMDB.ViewModels.PersonVM

<table class="table table-borderless">
    <tbody>
        <tr>
            <td colspan="3">
                @if (Model.ProfileImageFileName != null)
                {
                    @Html.Hidden("ProfileImageFileName", Model.ProfileImageFileName)
                    <div class="poster-box"><img src="~/images/@Model.ProfileImageFileName" /></div>
                }
            </td>
        <tr/>
        <tr>
            <td>
                @Html.LabelFor(model => model.FirstName)
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.LabelFor(model => model.LastName)
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.LabelFor(model => model.DateOfBirth)
                @Html.EditorFor(model => model.DateOfBirth, "{0:dd-MM-yyyy}", new { htmlAttributes = new { @size = "2", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td colspan="3">
                @Html.LabelFor(model => model.ProfileImageFormFile)
                @Html.EditorFor(model => model.ProfileImageFormFile, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProfileImageFormFile, "", new { @class = "text-danger" })
            </td>
        <tr />
        <tr>
            <td colspan="3">
                @Html.LabelFor(model => model.Biography)
                @Html.EditorFor(model => model.Biography, new { htmlAttributes = new { @rows = "4", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Biography, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td colspan="3">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="submit" value="SUBMIT" class="btn btn-warning text-uppercase" />
            </td>
        </tr>
    </tbody>
</table>

